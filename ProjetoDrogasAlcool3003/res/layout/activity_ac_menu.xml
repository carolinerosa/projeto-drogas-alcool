<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".AcMenu" >

    <Button
        android:id="@+id/button_readMessages"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="89dp"
        android:textColor="@android:color/white"
        android:text="MENSAGENS" />

    <Button
        android:id="@+id/button_sendMessage"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/button_readMessages"
        android:layout_alignRight="@+id/button_readMessages"
        android:layout_below="@+id/button_readMessages"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:text="ENVIAR MINHA MENSAGEM" />

    <Button
        android:id="@+id/button_videos"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_sendMessage"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:text="EXTRAS" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Projeto Drogas\nProtÃ³tipo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
